//Construir um algoritmo para ler 6 valores reais, calcular e imprimir a média aritmética desses valores.
#include <stdio.h>
#include <stdlib.h>

int main(void) {
  float a,b,c,d,e,f,media=0;
  printf("Digite o valor da variavel a: ");
  scanf("%f",&a);
  printf("Digite o valor da variavel b: ");
  scanf("%f",&b);
  printf("Digite o valor da variavel c: ");
  scanf("%f",&c);
  printf("Digite o valor da variavel d: ");
  scanf("%f",&d);
  printf("Digite o valor da variavel e: ");
  scanf("%f",&e);
  printf("Digite o valor da variavel f: ");
  scanf("%f",&f);
  media= (a+b+c+d+e+f)/2;
  printf("A média aritmetica das variaveis é: %.2f",media);
  return 0;
}
